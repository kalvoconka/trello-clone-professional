# Development Environment Variables

# Application
NODE_ENV=development
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/trello_dev?schema=public

# JWT Configuration  
JWT_SECRET=your-super-secure-development-secret-key-here-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-development-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS and Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Optional: Email service (for development)
# EMAIL_HOST=
# EMAIL_PORT=
# EMAIL_USER=
# EMAIL_PASS=

# Optional: Redis (for development)
# REDIS_URL=redis://localhost:6379

# File uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads