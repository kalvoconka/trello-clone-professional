# Production Environment Variables

# Application
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://trello:SECURE_PASSWORD@postgres:5432/trello_production?schema=public
DB_NAME=trello_production
DB_USER=trello
DB_PASSWORD=SECURE_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=your-super-secure-32-character-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS and Frontend
FRONTEND_URL=https://trello.yourdomain.com
CORS_ORIGIN=https://trello.yourdomain.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Optional: Email service (for invitations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: Redis (for sessions/cache)
REDIS_URL=redis://redis:6379

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# File uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads